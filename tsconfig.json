{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": true,
    "outDir": "./lib",
    "declaration": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "typings/globals/**/*.d.ts",
    "src/**/**/*.ts",
    "src/**/**/*.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "emitRequireType": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
